	<group_category>
			<title>Bourbon</title>
					<bourbon_drinks>Champagne Julep</bourbon_drinks>
					<ingre>
						<ingredients>3 oz. bourbon</ingredients>
						<ingredients>1 tsp. sugar syrup</ingredients>
						<ingredients>Brut Champagne</ingredients>
						<ingredients>Several sprigs of mint</ingredients>
					</ingre>
					<mdir>
						<mdir_steps>Remove a half-dozen mint leaves from sprig.</mdir_steps>
						<mdir_steps>Put them in a tall Collins glass with syrup and muddle.</mdir_steps>
						<mdir_steps>Fill glass two-thirds full with cracked ice.</mdir_steps>
						<mdir_steps>Pour in bourbon.</mdir_steps>
						<mdir_steps>Stir briskly.</mdir_steps>
						<mdir_steps>Fill ice-cold champagne.</mdir_steps>
						<mdir_steps>Stir gently.</mdir_steps>
						<mdir_steps>Garnish with a large mint sprig.</mdir_steps>
					</mdir>
					<glass>
						<serving_glass>Collins Glass</serving_glass>
						<image>images/collins_glass.jpg</image>
					</glass>
	</group_category>
